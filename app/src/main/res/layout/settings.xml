<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settings_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingTop="30dp"
    android:paddingEnd="20dp"
    android:paddingBottom="30dp">

    <LinearLayout
        android:id="@+id/linear_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight=".5"
            android:text="Font"
            android:textColor="@color/colorPrimaryDark" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_weight="2.5"
            android:backgroundTint="@color/colorPrimaryDark"
            android:gravity="end"
            android:popupBackground="@color/colorAccent"
            android:textAlignment="gravity"
            android:theme="@style/AppTheme" />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/linear_layout_1"
        android:id="@+id/linear_layout_2"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight=".3"
            android:text="Aa"
            android:textColor="@color/colorPrimaryDark" />


        <github.hongbeomi.dividerseekbar.DividerSeekBar
            android:max="5"
            app:dividerActiveMode="target"
            app:dividerTextLocationMode="top"
            app:dividerTextInterval="1"
            app:dividerSeaLineStrokeWidth="@dimen/dp_2"
            app:dividerSeaLineColor="@color/colorPrimary"
            app:dividerTextColor="@color/gray_600"
            app:dividerStrokeWidth="@dimen/dp_2"
            app:dividerColor="@color/light_blue_600"
            app:dividerTextSize="@dimen/sp_12"
            app:dividerActivatedTargetValue="6"
            app:dividerThumbDefaultDrawable="@color/light_blue_400"
            android:id="@+id/divider_seek_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.4" />


        <TextView
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight=".3"
            android:gravity="end"
            android:text="Aa"
            android:textColor="@color/colorPrimaryDark" />


    </LinearLayout>

    <View
        android:layout_below="@+id/linear_layout_2"
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray" />
    <LinearLayout
        android:layout_below="@+id/view_1"
        android:id="@+id/linear_layout_3"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:text="Align"
            android:textColor="@color/colorPrimaryDark" />

        <ImageView
            android:tint="@color/colorPrimaryDark"
            android:layout_margin="@dimen/dp_2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:src="@drawable/ic_format_align_left_24" />

        <ImageView
            android:tint="@color/colorPrimaryDark"
            android:layout_margin="@dimen/dp_2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:src="@drawable/ic_format_align_center_24" />

        <ImageView
            android:tint="@color/colorPrimaryDark"
            android:layout_margin="@dimen/dp_2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:src="@drawable/ic_format_align_right_24" />

        <ImageView
            android:tint="@color/colorPrimaryDark"
            android:layout_margin="@dimen/dp_2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:src="@drawable/ic_format_align_justify_24" />





    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/linear_layout_3"
        android:id="@+id/linear_layout_4"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:text="Line Spacing"
            android:textColor="@color/colorPrimaryDark" />

        <ImageView
            android:tint="@color/colorPrimaryDark"
            android:layout_margin="@dimen/dp_2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:src="@drawable/ic_hamburger_24" />

        <ImageView
            android:tint="@color/colorPrimaryDark"
            android:layout_margin="@dimen/dp_2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:src="@drawable/ic_format_line_spacing_24" />

        <ImageView
            android:tint="@color/colorPrimaryDark"
            android:layout_margin="@dimen/dp_2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:src="@drawable/ic_format_line_spacing_24" />



    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/linear_layout_4"
        android:id="@+id/linear_layout_5"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:text="Margins"
            android:textColor="@color/colorPrimaryDark" />

        <ImageView
            android:tint="@color/colorPrimaryDark"
            android:layout_margin="@dimen/dp_2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:src="@drawable/ic_margin_24" />

        <ImageView
            android:tint="@color/colorPrimaryDark"
            android:layout_margin="@dimen/dp_2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:src="@drawable/ic_margin_24" />

        <ImageView
            android:layout_margin="@dimen/dp_2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:tint="@color/colorPrimaryDark"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:src="@drawable/ic_margin_24" />



    </LinearLayout>

    <View
        android:layout_below="@+id/linear_layout_5"
        android:id="@+id/view_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_below="@+id/view_2"
        android:id="@+id/linear_layout_6"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2.4"
            android:text="Model"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:paddingBottom="@dimen/dp_2"
            android:paddingTop="@dimen/dp_2"
            android:background="@drawable/button_border"
            android:textColor="@color/colorPrimaryDark"
            android:layout_margin="@dimen/dp_2"
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:text="Aa"
            />

        <TextView
            android:paddingTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_2"
            android:background="@drawable/button_border"
            android:textColor="@color/colorPrimaryDark"
            android:layout_margin="@dimen/dp_2"
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="Aa"
            />

        <TextView
            android:paddingBottom="@dimen/dp_2"
            android:paddingTop="@dimen/dp_2"
            android:background="@drawable/button_border"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_2"
            android:layout_weight="1.2"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Aa"
            />



    </LinearLayout>


    <View
        android:layout_below="@+id/linear_layout_6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray" />


</RelativeLayout>